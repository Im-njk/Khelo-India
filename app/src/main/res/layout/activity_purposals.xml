<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".purposals">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/orange"
        android:elevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/username_pur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Hi, Username"
            android:textColor="@color/orange"
            android:textSize="20dp"
            android:layout_marginBottom="100dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/trans_layout_purposal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/transition_purposal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/editbox_sh"
                android:gravity="center"
                android:text="In Transition Purposals"
                android:textColor="@color/orange"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/old_layout_purposal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/old_purposal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/editbox_sh"
                android:gravity="center"
                android:text="Old Purposals"
                android:textColor="@color/orange"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>