<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/card"
    android:layout_margin="5dp"
    android:background="@drawable/editbox_sh"
    android:layout_marginHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/recycer_pro_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Name of Project"
                    android:paddingHorizontal="15dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:paddingVertical="5dp"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:layout_weight="0.5">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="cost"
                    android:gravity="center"
                    android:id="@+id/recycer_cost"
                    android:layout_weight="1">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/recycer_applicant_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="name of applicant"
                    android:textStyle="bold"
                    android:paddingHorizontal="15dp"
                    android:layout_weight="1">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Status"
                    android:gravity="center_horizontal"
                    android:textColor="#008000"
                    android:paddingHorizontal="10dp"
                    android:id="@+id/recycer_status"
                    android:layout_weight="2">

                </TextView>
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>
